    <![endif]-->

    <link href='http://fonts.googleapis.com/css?family=Oswald:400,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Crimson+Text:400,400italic,600' rel='stylesheet' type='text/css'>

  </head>
  
  <body>
    <div id="wrapper">
      <div id="sidebar-wrapper-mini">
          <div></div>
          <div></div>
          <div></div>
        </ul>
      </div>
      <div id="sidebar-wrapper">
          <ul>
            <li>
              <h1><a href="/index.html">Home</a></h1>
              <p><em>&mdash; Down the Rabbit Hole &mdash;</em></p>
            </li>
            <li>
              <h1><a href="/#work">Work</a></h1>
              <p><em>&mdash; No rest for the wicked &mdash;</em></p>
            </li>
            <li>
              <h1><a href="/#resume">Resume</a></h1>
              <p><em>&mdash; something clever &mdash;</em></p>
            </li>
            <li>
              <h1><a href="/#about">About</a></h1>
              <p><em>&mdash; a 100-word autobio &mdash;</em></p>
            </li>
          </ul>
     </div>
      <div id="page-content-wrapper">
          <%= yield %>
      </div>
    </div>
</body>

<script type="text/javascript">
  $(document).ready(function() {
    $(".snippet").hide()

    $(".preview").mouseover(function() {
      $(this).hide()
      var snip_id = $(this).attr('id')
      $("#" + snip_id + "_snippet").show();
    })

      $(".snippet").mouseout(function() {
        $(".snippet").hide();
        $(".preview").show();
      })

    $("#sidebar-wrapper-mini").click(function() {
      $("#sidebar-wrapper-mini").hide();       
      $("#wrapper").addClass("toggled");
      $("#page-content-wrapper").addClass("toggled");
      $("#sidebar-wrapper").addClass("toggled");

    });

  })

  $(window).scroll(function() {
      $("#sidebar-wrapper-mini").show();
      $("#wrapper").removeClass("toggled");
      $("#sidebar-wrapper").removeClass("toggled");
      $("#page-content-wrapper").removeClass("toggled");
  })


</script>

</html>